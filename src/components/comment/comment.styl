.comment
  width 100%
  margin-top 10px
  min-height 100px
  display flex
  align-items flex-start
  &__avatar
    width 85px;
  &__other
    flex-grow 1
    box-sizing border-box
    padding-left 15px
  &-other
    &__top
      width 100%
      min-height 25px
      display flex
      margin-bottom 10px
      align-items center
    &__name
      text-decoration underline
      color #0c5394
      font-weight bold
    &__time
      color #7c7c7c
      font-size 13px
      margin 0 10px
    &__response
      margin-left auto
      margin-right 10px
      color #0c5394
      cursor pointer
      font-size 14px
      border-bottom 1px solid #0c5394
      &:hover
      &_block
        opacity 0.7
    &__text
      font-size 14px
      width 100%
      min-height 45px
    &__open-text
      color #0c5394
      text-decoration underline
      cursor pointer
